<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.afterserver.mapper.PartsMapper">

  <resultMap type="com.xiliulou.afterserver.entity.Parts" id="PartsMap">
    <result property="id" column="id" jdbcType="INTEGER"/>
    <result property="name" column="name" jdbcType="VARCHAR"/>
    <result property="price" column="price" jdbcType="NUMERIC"/>
    <result property="createTime" column="create_time" jdbcType="INTEGER"/>
    <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
  </resultMap>

  <!--查询单个-->
  <select id="queryById" resultMap="PartsMap">
        select
          id, name, price, create_time, update_time
        from t_parts
        where id = #{id}
    </select>

  <!--查询指定行数据-->
  <select id="queryAllByLimit" resultMap="PartsMap">
        select
          id, name, price, create_time, update_time
        from t_parts
        limit #{offset}, #{limit}
    </select>

  <!--通过实体作为筛选条件查询-->
  <select id="queryAll" resultMap="PartsMap">
    select
    id, name, price, create_time, update_time
    from t_parts
    <where>
      <if test="id != null">
        and id = #{id}
      </if>
      <if test="name != null and name != ''">
        and name = #{name}
      </if>
      <if test="price != null">
        and price = #{price}
      </if>
      <if test="createTime != null">
        and create_time = #{createTime}
      </if>
      <if test="updateTime != null">
        and update_time = #{updateTime}
      </if>
    </where>
  </select>

  <!--新增所有列-->
  <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_parts(name, price, create_time, update_time)
        values (#{name}, #{price}, #{createTime}, #{updateTime})
    </insert>

  <!--通过主键修改数据-->
  <update id="update">
    update t_parts
    <set>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="price != null">
        price = #{price},
      </if>
      <if test="createTime != null">
        create_time = #{createTime},
      </if>
      <if test="updateTime != null">
        update_time = #{updateTime},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过主键删除-->
  <delete id="deleteById">
        delete from t_parts where id = #{id}
    </delete>

  <select id="queryList" resultMap="PartsMap">
        select
          id, name, price, create_time, update_time
        from t_parts
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
        </where>
        order by create_time desc
        limit #{offset}, #{size}
    </select>
</mapper>
