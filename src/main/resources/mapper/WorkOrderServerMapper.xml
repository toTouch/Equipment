<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiliulou.afterserver.mapper.WorkOrderServerMapper">

    <resultMap id="workOrderServerMap" type="com.xiliulou.afterserver.web.query.WorkOrderServerQuery">
        <result column="id" property="id" jdbcType="INTEGER"></result>
        <result column="work_order_id" property="workOrderId" jdbcType="INTEGER"></result>
        <result column="server_id" property="serverId" jdbcType="INTEGER"></result>
        <result column="server_name" property="serverName" jdbcType="VARCHAR"></result>
        <result column="fee" property="fee" jdbcType="DECIMAL"></result>
        <result column="payment_method" property="paymentMethod" jdbcType="INTEGER"></result>
        <result column="solution" property="solution" jdbcType="VARCHAR"></result>
        <result column="solution_time" property="solutionTime" jdbcType="INTEGER"></result>
        <result column="prescription" property="prescription" jdbcType="INTEGER"></result>
        <result column="is_use_third" property="isUseThird" jdbcType="VARCHAR"></result>
        <result column="third_company_type" property="thirdCompanyType" jdbcType="INTEGER"></result>
        <result column="third_company_id" property="thirdCompanyId" jdbcType="VARCHAR"></result>
        <result column="third_company_name" property="thirdCompanyName" jdbcType="VARCHAR"></result>
        <result column="third_company_pay" property="thirdCompanyPay" jdbcType="DECIMAL"></result>
        <result column="third_payment_status" property="thirdPaymentStatus" jdbcType="INTEGER"></result>
        <result column="third_reason" property="thirdReason" jdbcType="VARCHAR"></result>
        <result column="third_responsible_person" property="thirdResponsiblePerson" jdbcType="VARCHAR"></result>
    </resultMap>

    <select id="queryByWorkOrderId" resultMap="workOrderServerMap">
        select id, work_order_id, server_id, `server_name`, fee, payment_method, solution, solution_time, prescription, is_use_third, third_company_type,
        third_company_id, third_company_name, third_company_pay, third_payment_status, third_reason, third_responsible_person
        from t_work_order_server
        <where>
            <if test="workOrderId != null">
                and work_order_id = #{workOrderId}
            </if>
            <if test="serverId != null">
                and server_id = #{serverId}
            </if>
        </where>
    </select>

    <select id="queryMaxCountByWorkOrderId" resultType="integer">
        select max(c.count)
        from (
          select count(*) as `count` from t_work_order_server
          <where>
              work_order_id in
              <foreach collection="workOrderIds" item="item" open="(" separator="," close=")">
                  #{item}
              </foreach>
          </where>
          group by work_order_id
        ) c
    </select>
</mapper>